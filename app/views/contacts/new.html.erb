<div>
<%= form_for(@contact) do |f| %>

    <%= f.label :first_name %>:
    <%= f.text_field :first_name %><br />

    <%= f.label :last_name %>:
    <%= f.text_field :last_name %><br />

    <%= f.label :email %>
    <%= f.email_field :email%>

    <%= f.label :message %>
    <%= f.text_field :message%>

    <%= f.label :phone_number %>
    <%= f.telephone_field :phone_number %>

    <%= f.label :subject %>
    <%= f.text_field :subject %>

    <%= f.submit  "Let's connect" %>
<% end %>
</div>